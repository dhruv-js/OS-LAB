<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context=".Fragments.Description_PR" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/desc">

        <TextView
            android:id="@+id/prhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:padding="10dp"
            android:text="Page Replacement"
            android:textColor="#222237"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/prdef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:text="Page replacement is a process of swapping out an existing page from the frame of a main memory and replacing it with the required page."
            android:textColor="#222237"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/prdef2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:text="Page replacement is required when-"
            android:textColor="#222237"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/prdef3"
            android:layout_width="375dp"
            android:layout_height="44dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:text="> All the frames of main memory are already occupied."
            android:textColor="#222237"
            android:textColorLink="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/prdef4"
            android:layout_width="372dp"
            android:layout_height="76dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:text="> Thus, a page has to be replaced to create a room for the required page."
            android:textColor="#222237"
            android:textColorLink="#FFFFFF"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/prdef5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:text="Page replacement algorithms help to decide which page must be swapped out from the main memory to create a room for the incoming page."
            android:textColor="#222237"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/prdef6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:text="Various page replacement algorithms are-"
            android:textColor="#222237"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/prdef7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:text="1. FIFO Algorithm"
            android:textColor="#222237"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/prdef8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:text="2. LIFO Algorithm"
            android:textColor="#222237"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/prdef9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:text="3. LRU Algorithm"
            android:textColor="#222237"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/prdef10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:text="4. Optimal Algorithm"
            android:textColor="#222237"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/prdef11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:text="5. Random Algorithm"
            android:textColor="#222237"
            android:textSize="18sp" />
    </LinearLayout>


    </RelativeLayout>
    </ScrollView>

</FrameLayout>